<% provide(:title, @user.name) %>
<div class="row">
  <div class="span6">
    <h1><%= @user.name %></h1>
  </div>
  <div class="span6">
    <div class="center hero-unit">
      <%= link_to "Create new ad!", new_ad_path, class: "btn btn-large btn-primary" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span12">
     <% if @user.ads.any? %>
       <h3 class="pull-right">Ads (<%= @user.ads.count %>)</h3>
         <%= render @ads %>
       <%= will_paginate @ads %>
     <% end %>
  </div>
</div>
