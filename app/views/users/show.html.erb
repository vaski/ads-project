<% provide(:title, @user.name) %>
<div class="row">
  <div class="span12">
    <h1><%= @user.name %></h1>
  </div>
</div>
<div class="row">
  <div class="span12">
     <% if @user.ads.any? %>
       <h3 class="pull-right">Ads (<%= @user.ads.count %>)</h3>
         <%= render @ads %>
       <%= will_paginate @ads %>
     <% end %>
  </div>
</div>
